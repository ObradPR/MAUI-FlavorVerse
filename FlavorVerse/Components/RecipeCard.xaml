<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FlavorVerse.Components.RecipeCard">

    <Frame Padding="10" Margin="5" BorderColor="LightGray" CornerRadius="10">
        <StackLayout>
            <!-- Recipe Image -->
            <Image Source="{Binding ImageUrl}" HeightRequest="100" Aspect="AspectFill" />

            <!-- Recipe Title -->
            <Label Text="{Binding Title}" FontSize="18" FontAttributes="Bold" TextColor="Black" />

            <!-- Recipe Description -->
            <Label Text="{Binding Description}" FontSize="14" TextColor="Gray" />
        </StackLayout>
    </Frame>
</ContentView>